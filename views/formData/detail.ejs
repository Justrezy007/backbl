<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %> 
<body>
    <div class="container">
        <%- include('../partials/nav') %> 
        <h1 class="mt-3">User Detail</h1>
        <div class="card bg-light">
            <div class="card-body">
              <h3><%= data.name %></h3>
              <div>
                <p><%= data.email %></p>
                <p><%= data.WANumber %></p>
              </div>
              <a id="deleteuser" class="btn btn-danger" data-doc="<%= data._id %>">Delete</a>
            </div>
          </div>
    </div>
</body>
<script>
    const delbtn = document.getElementById('deleteuser')
    
    delbtn.addEventListener('click',()=>{

        const endpoint = `/admin/formdata/${delbtn.dataset.doc}`

        fetch(endpoint,{method: 'DELETE'})
        .then(response=>response.json())
        .then(data => window.location.href = data.redirect)
        .catch(err=>console.log(err))
    })
</script>
</html>